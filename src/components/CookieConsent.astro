---
/**
 * Bandeau de Consentement Cookies (RGPD)
 *
 * Conforme au R√®glement G√©n√©ral sur la Protection des Donn√©es (RGPD)
 * et aux recommandations de la CNIL.
 *
 * Fonctionnalit√©s:
 * - Affichage uniquement si consentement non donn√©
 * - Accepter / Refuser / Personnaliser
 * - Stockage du choix utilisateur
 * - Communication avec Google Analytics
 */

interface Props {
  policyUrl?: string;
  position?: 'bottom' | 'top';
}

const {
  policyUrl = '/politique-confidentialite/',
  position = 'bottom'
} = Astro.props;
---

<div
  id="cookieConsent"
  class={`cookie-consent cookie-consent-${position}`}
  style="display: none;"
  role="dialog"
  aria-label="Consentement aux cookies"
  aria-describedby="cookieConsentDescription"
>
  <div class="cookie-consent-content">
    <div class="cookie-consent-text">
      <h3 class="cookie-consent-title">üç™ Nous utilisons des cookies</h3>
      <p id="cookieConsentDescription" class="cookie-consent-description">
        Nous utilisons des cookies pour am√©liorer votre exp√©rience, analyser notre trafic et personnaliser le contenu.
        En cliquant sur "Accepter", vous consentez √† l'utilisation de TOUS les cookies.
        <a href={policyUrl} class="cookie-consent-link">En savoir plus</a>
      </p>
    </div>

    <div class="cookie-consent-actions">
      <button
        type="button"
        id="cookieConsentAccept"
        class="cookie-consent-btn cookie-consent-btn-accept"
        aria-label="Accepter tous les cookies"
      >
        Accepter
      </button>
      <button
        type="button"
        id="cookieConsentDeny"
        class="cookie-consent-btn cookie-consent-btn-deny"
        aria-label="Refuser les cookies"
      >
        Refuser
      </button>
      <button
        type="button"
        id="cookieConsentCustomize"
        class="cookie-consent-btn cookie-consent-btn-customize"
        aria-label="Personnaliser les cookies"
      >
        Personnaliser
      </button>
    </div>
  </div>
</div>

<!-- Modal de Personnalisation -->
<div
  id="cookieCustomizeModal"
  class="cookie-modal"
  style="display: none;"
  role="dialog"
  aria-label="Personnaliser les cookies"
>
  <div class="cookie-modal-content">
    <div class="cookie-modal-header">
      <h3>Param√®tres des Cookies</h3>
      <button
        type="button"
        id="cookieModalClose"
        class="cookie-modal-close"
        aria-label="Fermer"
      >
        ‚úï
      </button>
    </div>

    <div class="cookie-modal-body">
      <div class="cookie-category">
        <div class="cookie-category-header">
          <label class="cookie-category-label">
            <input
              type="checkbox"
              id="cookieNecessary"
              checked
              disabled
              aria-label="Cookies n√©cessaires (toujours actifs)"
            />
            <span class="cookie-category-title">Cookies N√©cessaires</span>
            <span class="cookie-category-badge">Toujours actif</span>
          </label>
        </div>
        <p class="cookie-category-description">
          Ces cookies sont indispensables au fonctionnement du site (navigation, s√©curit√©, pr√©f√©rences).
          Ils ne peuvent pas √™tre d√©sactiv√©s.
        </p>
      </div>

      <div class="cookie-category">
        <div class="cookie-category-header">
          <label class="cookie-category-label">
            <input
              type="checkbox"
              id="cookieAnalytics"
              checked
              aria-label="Cookies analytiques"
            />
            <span class="cookie-category-title">Cookies Analytiques</span>
          </label>
        </div>
        <p class="cookie-category-description">
          Ces cookies nous aident √† comprendre comment les visiteurs utilisent notre site (Google Analytics).
          Donn√©es anonymis√©es et conformes RGPD.
        </p>
      </div>

      <div class="cookie-category">
        <div class="cookie-category-header">
          <label class="cookie-category-label">
            <input
              type="checkbox"
              id="cookieMarketing"
              aria-label="Cookies marketing"
            />
            <span class="cookie-category-title">Cookies Marketing</span>
          </label>
        </div>
        <p class="cookie-category-description">
          Ces cookies permettent d'afficher des publicit√©s personnalis√©es et de mesurer leur efficacit√©.
          (Non utilis√©s actuellement)
        </p>
      </div>
    </div>

    <div class="cookie-modal-footer">
      <button
        type="button"
        id="cookieSavePreferences"
        class="cookie-consent-btn cookie-consent-btn-accept"
      >
        Sauvegarder mes Pr√©f√©rences
      </button>
      <button
        type="button"
        id="cookieAcceptAll"
        class="cookie-consent-btn cookie-consent-btn-secondary"
      >
        Tout Accepter
      </button>
    </div>
  </div>
</div>

<script>
  // Fonction pour v√©rifier si le consentement a d√©j√† √©t√© donn√©
  function hasConsent() {
    return localStorage.getItem('cookieConsent') !== null;
  }

  // Fonction pour afficher le bandeau
  function showCookieBanner() {
    const banner = document.getElementById('cookieConsent');
    if (banner && !hasConsent()) {
      banner.style.display = 'block';
      // Ajouter animation
      setTimeout(() => {
        banner.classList.add('cookie-consent-visible');
      }, 100);
    }
  }

  // Fonction pour masquer le bandeau
  function hideCookieBanner() {
    const banner = document.getElementById('cookieConsent');
    if (banner) {
      banner.classList.remove('cookie-consent-visible');
      setTimeout(() => {
        banner.style.display = 'none';
      }, 300);
    }
  }

  // Accepter tous les cookies
  function acceptAllCookies() {
    localStorage.setItem('cookieConsent', 'accepted');
    localStorage.setItem('cookieAnalytics', 'true');
    localStorage.setItem('cookieMarketing', 'false');

    // √âmettre √©v√©nement pour Google Analytics
    window.dispatchEvent(new CustomEvent('cookieConsentAccepted'));

    hideCookieBanner();
  }

  // Refuser tous les cookies (sauf n√©cessaires)
  function denyAllCookies() {
    localStorage.setItem('cookieConsent', 'denied');
    localStorage.setItem('cookieAnalytics', 'false');
    localStorage.setItem('cookieMarketing', 'false');

    // √âmettre √©v√©nement
    window.dispatchEvent(new CustomEvent('cookieConsentDenied'));

    hideCookieBanner();
  }

  // Ouvrir la modal de personnalisation
  function openCustomizeModal() {
    const modal = document.getElementById('cookieCustomizeModal');
    if (modal) {
      modal.style.display = 'flex';
      // Charger les pr√©f√©rences actuelles
      const analyticsCheckbox = document.getElementById('cookieAnalytics') as HTMLInputElement;
      const marketingCheckbox = document.getElementById('cookieMarketing') as HTMLInputElement;

      if (analyticsCheckbox) {
        analyticsCheckbox.checked = localStorage.getItem('cookieAnalytics') !== 'false';
      }
      if (marketingCheckbox) {
        marketingCheckbox.checked = localStorage.getItem('cookieMarketing') === 'true';
      }
    }
  }

  // Fermer la modal
  function closeCustomizeModal() {
    const modal = document.getElementById('cookieCustomizeModal');
    if (modal) {
      modal.style.display = 'none';
    }
  }

  // Sauvegarder les pr√©f√©rences personnalis√©es
  function saveCustomPreferences() {
    const analyticsCheckbox = document.getElementById('cookieAnalytics') as HTMLInputElement;
    const marketingCheckbox = document.getElementById('cookieMarketing') as HTMLInputElement;

    const analyticsEnabled = analyticsCheckbox?.checked ?? false;
    const marketingEnabled = marketingCheckbox?.checked ?? false;

    localStorage.setItem('cookieConsent', 'customized');
    localStorage.setItem('cookieAnalytics', analyticsEnabled.toString());
    localStorage.setItem('cookieMarketing', marketingEnabled.toString());

    // √âmettre √©v√©nement selon les choix
    if (analyticsEnabled) {
      window.dispatchEvent(new CustomEvent('cookieConsentAccepted'));
    } else {
      window.dispatchEvent(new CustomEvent('cookieConsentDenied'));
    }

    closeCustomizeModal();
    hideCookieBanner();
  }

  // Initialisation au chargement de la page
  document.addEventListener('DOMContentLoaded', () => {
    // Afficher le bandeau si n√©cessaire
    showCookieBanner();

    // Boutons du bandeau
    const acceptBtn = document.getElementById('cookieConsentAccept');
    const denyBtn = document.getElementById('cookieConsentDeny');
    const customizeBtn = document.getElementById('cookieConsentCustomize');

    if (acceptBtn) acceptBtn.addEventListener('click', acceptAllCookies);
    if (denyBtn) denyBtn.addEventListener('click', denyAllCookies);
    if (customizeBtn) customizeBtn.addEventListener('click', openCustomizeModal);

    // Boutons de la modal
    const modalClose = document.getElementById('cookieModalClose');
    const savePrefs = document.getElementById('cookieSavePreferences');
    const acceptAll = document.getElementById('cookieAcceptAll');

    if (modalClose) modalClose.addEventListener('click', closeCustomizeModal);
    if (savePrefs) savePrefs.addEventListener('click', saveCustomPreferences);
    if (acceptAll) acceptAll.addEventListener('click', () => {
      closeCustomizeModal();
      acceptAllCookies();
    });

    // Fermer la modal en cliquant √† l'ext√©rieur
    const modal = document.getElementById('cookieCustomizeModal');
    if (modal) {
      modal.addEventListener('click', (e) => {
        if (e.target === modal) {
          closeCustomizeModal();
        }
      });
    }
  });
</script>

<style>
