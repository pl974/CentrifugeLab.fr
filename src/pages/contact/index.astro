---
import Layout from '../../layouts/Layout.astro';

const metaDescription = "Contactez CentrifugeLab: Devis gratuit sous 24h. Conseil expert en centrifugeuses laboratoire. Téléphone, email, adresse. Service client réactif.";

// TODO: Remplacer par les vraies coordonnées
const contactInfo = {
  phone: '+33 1 XX XX XX XX', // À REMPLACER
  email: 'contact@centrifugelab.fr', // À VÉRIFIER
  address: {
    street: '[Adresse à compléter]', // À REMPLACER
    city: 'Paris', // À VÉRIFIER
    postalCode: '75XXX', // À REMPLACER
    country: 'France'
  },
  hours: {
    weekdays: '9h00 - 18h00',
    saturday: 'Sur rendez-vous',
    sunday: 'Fermé'
  },
  // Coordonnées par défaut (Paris) - À REMPLACER par les vraies coordonnées
  coordinates: {
    lat: 48.856614,
    lng: 2.352222
  }
};
---

<Layout
  title="Contact - CentrifugeLab | Devis Gratuit sous 24h"
  description={metaDescription}>
  <!-- Schema.org pour Rich Snippets -->
  <script type="application/ld+json" slot="head">
    {
      "@context": "https://schema.org",
      "@type": "ContactPage",
      "mainEntity": {
        "@type": "LocalBusiness",
        "name": "CentrifugeLab",
        "telephone": "+33 1 XX XX XX XX",
        "email": "contact@centrifugelab.fr",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "[Adresse à compléter]",
          "addressLocality": "Paris",
          "postalCode": "75XXX",
          "addressCountry": "FR"
        },
        "geo": {
          "@type": "GeoCoordinates",
          "latitude": 48.856614,
          "longitude": 2.352222
        },
        "openingHoursSpecification": [
          {
            "@type": "OpeningHoursSpecification",
            "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
            "opens": "09:00",
            "closes": "18:00"
          }
        ],
        "areaServed": {
          "@type": "Country",
          "name": "France"
        }
      }
    }
  </script>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Hero Section -->
    <div class="mb-12 text-center">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">
        Contactez nos Experts en Centrifugation
      </h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Une question ? Besoin d'un devis ? Notre équipe d'experts vous répond sous 24h.
        Conseil personnalisé et solutions adaptées à vos besoins.
      </p>
    </div>

    <div class="grid lg:grid-cols-2 gap-12 mb-12">
      <!-- Formulaire de Contact -->
      <section class="bg-white rounded-lg shadow-sm p-8">
        <h2 class="text-2xl font-semibold mb-6">Envoyez-nous un Message</h2>
        <form action="/devis-centrifugeuse/" method="GET" class="space-y-6">
          <div>
            <label for="nom" class="block text-sm font-medium text-gray-700 mb-2">
              Nom complet <span class="text-red-600">*</span>
            </label>
            <input
              type="text"
              id="nom"
              name="nom"
              required
              aria-required="true"
              class="w-full px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
              placeholder="Jean Dupont"
            />
          </div>

          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
              Email professionnel <span class="text-red-600">*</span>
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              aria-required="true"
              class="w-full px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
              placeholder="j.dupont@laboratoire.fr"
            />
          </div>

          <div>
            <label for="telephone" class="block text-sm font-medium text-gray-700 mb-2">
              Téléphone <span class="text-red-600">*</span>
            </label>
            <input
              type="tel"
              id="telephone"
              name="telephone"
              required
              aria-required="true"
              pattern="[0-9+\s-()]+"
              class="w-full px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
              placeholder="+33 1 23 45 67 89"
            />
          </div>

          <div>
            <label for="entreprise" class="block text-sm font-medium text-gray-700 mb-2">
              Entreprise / Laboratoire
            </label>
            <input
              type="text"
              id="entreprise"
              name="entreprise"
              class="w-full px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
              placeholder="Laboratoire XYZ"
            />
          </div>

          <div>
            <label for="sujet" class="block text-sm font-medium text-gray-700 mb-2">
              Sujet de votre demande <span class="text-red-600">*</span>
            </label>
            <select
              id="sujet"
              name="sujet"
              required
              aria-required="true"
              class="w-full px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
            >
              <option value="">Sélectionnez un sujet</option>
              <option value="devis">Demande de devis</option>
              <option value="conseil">Conseil technique</option>
              <option value="maintenance">Maintenance / SAV</option>
              <option value="location">Location d'équipement</option>
              <option value="formation">Formation</option>
              <option value="autre">Autre question</option>
            </select>
          </div>

          <div>
            <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
              Message <span class="text-red-600">*</span>
            </label>
            <textarea
              id="message"
              name="message"
              required
              aria-required="true"
              rows="6"
              class="w-full px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors resize-y"
              placeholder="Décrivez votre besoin en quelques lignes..."
            ></textarea>
          </div>

          <div class="flex items-start">
            <input
              type="checkbox"
              id="rgpd"
              name="rgpd"
              required
              aria-required="true"
              class="mt-1 h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"
            />
            <label for="rgpd" class="ml-3 text-sm text-gray-600">
              J'accepte que mes données soient utilisées pour traiter ma demande.
              <a href="/politique-confidentialite/" class="text-blue-600 hover:text-blue-800 underline">
                Politique de confidentialité
              </a>
              <span class="text-red-600">*</span>
            </label>
          </div>

          <button
            type="submit"
            class="w-full btn-primary justify-center"
          >
            <svg class="w-5 h-5 mr-2" aria-hidden="true" viewBox="0 0 24 24" fill="none">
              <path d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            Envoyer ma Demande
          </button>

          <p class="text-sm text-gray-500 text-center">
            Réponse garantie sous 24h ouvrées
          </p>
        </form>
      </section>

      <!-- Informations de Contact -->
      <section>
        <div class="bg-white rounded-lg shadow-sm p-8 mb-6">
          <h2 class="text-2xl font-semibold mb-6">Nos Coordonnées</h2>

          <div class="space-y-6">
            <!-- Téléphone -->
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <svg class="w-6 h-6 text-blue-600" aria-hidden="true" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                  <path d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="font-medium text-gray-900">Téléphone</h3>
                <a href={`tel:${contactInfo.phone.replace(/\s/g, '')}`} class="text-blue-600 hover:text-blue-800">
                  {contactInfo.phone}
                </a>
                <p class="text-sm text-gray-500 mt-1">Lun-Ven: {contactInfo.hours.weekdays}</p>
              </div>
            </div>

            <!-- Email -->
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <svg class="w-6 h-6 text-blue-600" aria-hidden="true" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                  <path d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="font-medium text-gray-900">Email</h3>
                <a href={`mailto:${contactInfo.email}`} class="text-blue-600 hover:text-blue-800">
                  {contactInfo.email}
                </a>
                <p class="text-sm text-gray-500 mt-1">Réponse sous 24h</p>
              </div>
            </div>

            <!-- Adresse -->
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <svg class="w-6 h-6 text-blue-600" aria-hidden="true" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                  <path d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="font-medium text-gray-900">Adresse</h3>
                <p class="text-gray-600">
                  {contactInfo.address.street}<br/>
                  {contactInfo.address.postalCode} {contactInfo.address.city}<br/>
                  {contactInfo.address.country}
                </p>
              </div>
            </div>

            <!-- Horaires -->
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <svg class="w-6 h-6 text-blue-600" aria-hidden="true" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                  <path d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="font-medium text-gray-900">Horaires d'Ouverture</h3>
                <ul class="text-gray-600 space-y-1">
                  <li>Lun-Ven: {contactInfo.hours.weekdays}</li>
                  <li>Samedi: {contactInfo.hours.saturday}</li>
                  <li>Dimanche: {contactInfo.hours.sunday}</li>
                </ul>
              </div>
            </div>
          </div>
        </div>

        <!-- Support d'Urgence -->
        <div class="bg-red-50 rounded-lg p-6 border border-red-200">
          <h3 class="font-semibold text-red-900 mb-2 flex items-center">
            <svg class="w-5 h-5 mr-2" aria-hidden="true" viewBox="0 0 24 24" fill="none" aria-hidden="true">
              <path d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            Support Technique d'Urgence
          </h3>
          <p class="text-sm text-red-800 mb-3">
            En cas de panne urgente affectant votre production
          </p>
          <a href={`tel:${contactInfo.phone.replace(/\s/g, '')}`} class="inline-flex items-center px-4 py-2 bg-red-600 text-white font-medium rounded-md hover:bg-red-700 transition-colors">
            <svg class="w-5 h-5 mr-2" aria-hidden="true" viewBox="0 0 24 24" fill="none">
              <path d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            Appeler Maintenant
          </a>
        </div>
      </section>
    </div>

    <!-- Google Maps -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-6">Localisation</h2>
      <div class="bg-white rounded-lg shadow-sm overflow-hidden">
        <!-- TODO: Remplacer par les vraies coordonnées et configurer API Key Google Maps -->
        <div class="relative w-full h-96 bg-gray-200">
          <iframe
            title="Localisation CentrifugeLab sur Google Maps"
            width="100%"
            height="100%"
            style="border:0"
            loading="lazy"
            allowfullscreen
            referrerpolicy="no-referrer-when-downgrade"
            src={`https://www.google.com/maps/embed/v1/place?key=VOTRE_API_KEY_GOOGLE_MAPS&q=${contactInfo.coordinates.lat},${contactInfo.coordinates.lng}&zoom=15`}>
          </iframe>

          <!-- Fallback si pas d'API Key configurée -->
          <div class="absolute inset-0 flex items-center justify-center bg-gray-100">
            <div class="text-center p-8">
              <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" aria-hidden="true" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                <path d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <p class="text-gray-600 mb-4">
                Carte Google Maps<br/>
                <span class="text-sm">{contactInfo.address.city}, France</span>
              </p>
              <a
                href={`https://www.google.com/maps/search/?api=1&query=${contactInfo.coordinates.lat},${contactInfo.coordinates.lng}`}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center text-blue-600 hover:text-blue-800"
              >
                Ouvrir dans Google Maps
                <svg class="w-4 h-4 ml-2" aria-hidden="true" viewBox="0 0 24 24" fill="none">
                  <path d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
      <p class="text-sm text-gray-500 mt-3 text-center">
        <!-- TODO: Remplacer par les vraies instructions d'accès -->
        Accès: Métro ligne X, Station Y - Parking visiteurs disponible
      </p>
    </section>

    <!-- FAQ Contact -->
    <section class="bg-gray-50 rounded-lg p-8">
      <h2 class="text-2xl font-semibold mb-6 text-center">Questions Fréquentes</h2>
      <div class="grid md:grid-cols-2 gap-6 max-w-4xl mx-auto">
        <div>
          <h3 class="font-medium text-gray-900 mb-2">Quel est le délai de réponse ?</h3>
          <p class="text-gray-600 text-sm">
            Nous répondons à toutes les demandes sous 24h ouvrées maximum. Les demandes urgentes sont traitées en priorité.
          </p>
        </div>
        <div>
          <h3 class="font-medium text-gray-900 mb-2">Puis-je obtenir un devis gratuit ?</h3>
          <p class="text-gray-600 text-sm">
            Oui, tous nos devis sont gratuits et sans engagement. Nous établissons une proposition personnalisée selon vos besoins.
          </p>
        </div>
        <div>
          <h3 class="font-medium text-gray-900 mb-2">Proposez-vous des démonstrations ?</h3>
          <p class="text-gray-600 text-sm">
            Oui, nous organisons des démonstrations sur site ou dans notre showroom selon votre préférence.
          </p>
        </div>
        <div>
          <h3 class="font-medium text-gray-900 mb-2">Intervenez-vous dans toute la France ?</h3>
          <p class="text-gray-600 text-sm">
            Oui, notre réseau de techniciens couvre l'ensemble du territoire français avec des délais d'intervention rapides.
          </p>
        </div>
      </div>
    </section>

    <!-- CTA Alternatifs -->
    <section class="mt-12 grid md:grid-cols-3 gap-6">
      <a href="/devis-centrifugeuse/" class="block bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition-shadow">
        <div class="flex items-center mb-3">
          <svg class="w-8 h-8 text-blue-600 mr-3" aria-hidden="true" viewBox="0 0 24 24" fill="none" aria-hidden="true">
            <path d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          <h3 class="font-semibold text-lg">Demande de Devis</h3>
        </div>
        <p class="text-gray-600 text-sm">Obtenez un devis personnalisé pour votre projet</p>
      </a>

      <a href="/guide-achat-centrifugeuse-laboratoire/" class="block bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition-shadow">
        <div class="flex items-center mb-3">
          <svg class="w-8 h-8 text-blue-600 mr-3" aria-hidden="true" viewBox="0 0 24 24" fill="none" aria-hidden="true">
            <path d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          <h3 class="font-semibold text-lg">Guide d'Achat</h3>
        </div>
        <p class="text-gray-600 text-sm">Conseils experts pour bien choisir votre centrifugeuse</p>
      </a>

      <a href="/formation-utilisation-centrifugeuse/" class="block bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition-shadow">
        <div class="flex items-center mb-3">
          <svg class="w-8 h-8 text-blue-600 mr-3" aria-hidden="true" viewBox="0 0 24 24" fill="none" aria-hidden="true">
            <path d="M12 14l9-5-9-5-9 5 9 5z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          <h3 class="font-semibold text-lg">Formation</h3>
        </div>
        <p class="text-gray-600 text-sm">Programmes de formation certifiés pour vos équipes</p>
      </a>
    </section>
  </div>
</Layout>

<style>
  .btn-primary {
    @apply inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200;
  }
</style>
