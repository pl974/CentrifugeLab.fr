---
import BreadcrumbSchema from '../../../components/BreadcrumbSchema.astro';
import Layout from '../../../layouts/Layout.astro';

// Meta description optimisée pour le SEO
const metaDescription = "Microcentrifugeuse haute précision pour laboratoire. 21000 RPM, volume 0.2-2.0mL. Compacte et silencieuse. Installation rapide. Devis sous 24h. 25 ans d'expertise.";

const caracteristiques = [
  {
    titre: 'Performance',
    points: [
      'Vitesse : jusqu\'à 21,000 RPM',
      'Volume : 0.2-2.0 mL',
      'Force RCF : jusqu\'à 30,130 × g',
      'Accélération < 13 secondes'
    ],
    icon: 'speed'
  },
  {
    titre: 'Compacité',
    points: [
      'Design compact',
      'Faible encombrement',
      'Portable et léger',
      'Installation facile'
    ],
    icon: 'compact'
  },
  {
    titre: 'Ergonomie',
    points: [
      'Interface intuitive',
      'Fonctionnement silencieux',
      'Chargement rapide',
      'Maintenance simplifiée'
    ],
    icon: 'ergonomic'
  }
];

const applications = [
  {
    domaine: 'Biologie Moléculaire',
    usages: [
      'Préparation PCR',
      'Purification ADN/ARN',
      'Isolation plasmides',
      'Séquençage'
    ],
    url: '/applications/centrifugeuse-recherche-scientifique/'
  },
  {
    domaine: 'Diagnostic',
    usages: [
      'Tests rapides',
      'Préparation échantillons',
      'Analyses cliniques',
      'Microbiologie'
    ],
    url: '/applications/centrifugeuse-biologie-medicale/'
  },
  {
    domaine: 'Recherche',
    usages: [
      'Culture cellulaire',
      'Études protéiques',
      'Analyses biochimiques',
      'Tests enzymatiques'
    ],
    url: '/applications/centrifugeuse-recherche-scientifique/'
  }
];

const modeles = [
  {
    nom: 'Série Compact',
    description: 'Solution idéale pour petits volumes et espace limité',
    specs: {
      vitesse: 'jusqu\'à 15,000 RPM',
      volume: '0.2-1.5 mL',
      programmes: '2 programmes',
      dimensions: '20 × 23 × 13 cm'
    },
    avantages: [
      'Ultra compact',
      'Démarrage rapide',
      'Silencieux',
      'Prix attractif'
    ],
    prix: 'À partir de 990€ HT'
  },
  {
    nom: 'Série Advanced',
    description: 'Performance maximale pour applications exigeantes',
    specs: {
      vitesse: 'jusqu\'à 21,000 RPM',
      volume: '0.2-2.0 mL',
      programmes: '10 programmes',
      dimensions: '23 × 28 × 15 cm'
    },
    avantages: [
      'Haute performance',
      'Interface digitale',
      'Rotors spécialisés',
      'Refroidissement optimisé'
    ],
    prix: 'À partir de 1,990€ HT'
  }
];

const services = [
  {
    titre: 'Installation Express',
    description: 'Mise en service rapide et formation',
    points: [
      'Installation sur site',
      'Formation utilisateur',
      'Guide pratique',
      'Support technique'
    ],
    url: '/formation-utilisation-centrifugeuse/'
  },
  {
    titre: 'Maintenance Simple',
    description: 'Programme d\'entretien adapté',
    points: [
      'Contrôles annuels',
      'Pièces garanties',
      'Calibration',
      'Traçabilité'
    ],
    url: '/maintenance/entretien-centrifugeuse-laboratoire/'
  },
  {
    titre: 'Location Courte Durée',
    description: 'Solutions flexibles pour besoins ponctuels',
    points: [
      'Location mensuelle',
      'Installation incluse',
      'Maintenance comprise',
      'Support réactif'
    ],
    url: '/location-centrifugeuse-laboratoire/'
  }
];
---

<Layout
  title="Microcentrifugeuse - Solution Compacte pour Petits Volumes"
  description={metaDescription}>
  <!-- Schema.org pour Rich Snippets -->
  <script type="application/ld+json" slot="head">
    {
      "@context": "https://schema.org",
      "@type": "Product",
      "name": "Microcentrifugeuse de Laboratoire",
      "description": "Microcentrifugeuses compactes pour laboratoire. Performance jusqu'à 21,000 RPM, volume 0.2-2.0 mL. Installation et formation incluses.",
      "brand": {
        "@type": "Brand",
        "name": "CentrifugeLab"
      },
      "aggregateRating": {
        "@type": "AggregateRating",
        "ratingValue": "4.8",
        "reviewCount": "64",
        "bestRating": "5",
        "worstRating": "1"
      },
      "offers": {
        "@type": "AggregateOffer",
        "priceCurrency": "EUR",
        "lowPrice": "990",
        "highPrice": "1990",
        "offerCount": "2",
        "availability": "https://schema.org/InStock",
        "seller": {
          "@type": "Organization",
          "name": "CentrifugeLab"
        }
      }
    }
  </script>

  <!-- Fil d'Ariane -->
  <BreadcrumbSchema items={[
    { name: 'Accueil', url: '/' },
    { name: 'Centrifugeuses', url: '/centrifugeuses/' },
    { name: 'Microcentrifugeuses', url: '/centrifugeuses/micro/' }
  ]} />

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Hero Section -->
    <div class="mb-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">
        Microcentrifugeuse : Solution Compacte pour Petits Volumes
      </h1>
      <p class="text-xl text-gray-600 mb-8">
        Découvrez nos microcentrifugeuses haute performance pour vos applications en biologie moléculaire.
        Design compact, performance maximale et simplicité d'utilisation.
      </p>
      <div class="flex gap-4">
        <a href="/devis-centrifugeuse/?type=micro&utm_source=micro" class="btn-primary">
          <svg class="w-5 h-5 mr-2" aria-hidden="true" viewBox="0 0 24 24" fill="none">
            <path d="M9 12H15M12 9V15M12 3C16.9706 3 21 7.02944 21 12C21 16.9706 16.9706 21 12 21C7.02944 21 3 16.9706 3 12C3 7.02944 7.02944 3 12 3Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          Devis Personnalisé
          <span class="block text-sm opacity-90">Réponse sous 24h</span>
        </a>
        <a href="/guide-achat-centrifugeuse-laboratoire/?utm_source=micro" class="btn-secondary">
          Guide d'Achat
          <span class="block text-sm opacity-90">Conseils experts</span>
        </a>
      </div>
    </div>

    <!-- Caractéristiques -->
    <section class="mb-12">
      <h2 class="text-3xl font-semibold mb-8">Caractéristiques Principales</h2>
      <div class="grid md:grid-cols-3 gap-6">
        {caracteristiques.map(carac => (
          <div class="bg-white rounded-lg shadow-sm p-6">
            <div class="mb-4">
              {carac.icon === 'speed' && (
                <svg class="w-12 h-12 text-blue-600" aria-hidden="true" viewBox="0 0 24 24" fill="none">
                  <path d="M12 15C13.6569 15 15 13.6569 15 12C15 10.3431 13.6569 9 12 9C10.3431 9 9 10.3431 9 12C9 13.6569 10.3431 15 12 15Z" stroke="currentColor" stroke-width="2"/>
                  <path d="M12 2C6.47715 2 2 6.47715 2 12C2 17.5228 6.47715 22 12 22C17.5228 22 22 17.5228 22 12C22 6.47715 17.5228 2 12 2Z" stroke="currentColor" stroke-width="2"/>
                  <path d="M12 9V7" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                </svg>
              )}
              {carac.icon === 'compact' && (
                <svg class="w-12 h-12 text-blue-600" aria-hidden="true" viewBox="0 0 24 24" fill="none">
                  <path d="M4 4h16v16H4V4z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M9 9h6v6H9V9z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              )}
              {carac.icon === 'ergonomic' && (
                <svg class="w-12 h-12 text-blue-600" aria-hidden="true" viewBox="0 0 24 24" fill="none">
                  <path d="M7 11.5V14m0 0v2.5M7 14h4m-4 0c0-4.97 4.03-9 9-9s9 4.03 9 9-4.03 9-9 9m-9-9h4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              )}
            </div>
            <h3 class="text-xl font-semibold mb-4">{carac.titre}</h3>
            <ul class="space-y-2">
              {carac.points.map(point => (
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-blue-600 mr-2 mt-1" aria-hidden="true" viewBox="0 0 24 24" fill="none">
                    <path d="M5 13l4 4L19 7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                  <span>{point}</span>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </section>

    <!-- Applications -->
    <section class="mb-12">
      <h2 class="text-3xl font-semibold mb-8">Applications Principales</h2>
      <div class="grid md:grid-cols-3 gap-6">
        {applications.map(app => (
          <a href={app.url} class="bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition-shadow duration-200">
            <h3 class="text-xl font-semibold mb-4">{app.domaine}</h3>
            <ul class="space-y-2 mb-6">
              {app.usages.map(usage => (
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-blue-600 mr-2 mt-1" aria-hidden="true" viewBox="0 0 24 24" fill="none">
                    <path d="M5 13l4 4L19 7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                  <span>{usage}</span>
                </li>
              ))}
            </ul>
            <div class="text-blue-600 flex items-center">
              En savoir plus
              <svg class="w-4 h-4 ml-2" aria-hidden="true" viewBox="0 0 24 24" fill="none">
                <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </div>
          </a>
        ))}
      </div>
    </section>

    <!-- Modèles -->
    <section class="mb-12">
      <h2 class="text-3xl font-semibold mb-8">Nos Modèles</h2>
      <div class="grid md:grid-cols-2 gap-6">
        {modeles.map(modele => (
          <div class="bg-white rounded-lg shadow-sm p-6">
            <h3 class="text-xl font-semibold mb-2">{modele.nom}</h3>
            <p class="text-gray-600 mb-4">{modele.description}</p>
            
            <div class="mb-6">
              <h4 class="font-medium mb-2">Spécifications :</h4>
              <ul class="space-y-2">
                {Object.entries(modele.specs).map(([key, value]) => (
                  <li class="flex items-start">
                    <svg class="w-5 h-5 text-blue-600 mr-2 mt-1" aria-hidden="true" viewBox="0 0 24 24" fill="none">
                      <path d="M5 13l4 4L19 7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    <span>{key}: {value}</span>
                  </li>
                ))}
              </ul>
            </div>

            <div class="mb-6">
              <h4 class="font-medium mb-2">Avantages :</h4>
              <ul class="space-y-2">
                {modele.avantages.map(avantage => (
                  <li class="flex items-start">
                    <span class="text-blue-600 mr-2">→</span>
                    <span>{avantage}</span>
                  </li>
                ))}
              </ul>
            </div>

            <div class="flex items-center justify-between mt-6">
              <span class="text-lg font-semibold text-blue-600">{modele.prix}</span>
              <a href={`/devis-centrifugeuse/?type=micro&modele=${modele.nom.toLowerCase()}&utm_source=micro_modeles`} 
                 class="btn-primary">
                Demander un Devis
              </a>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Services -->
    <section class="mb-12">
      <h2 class="text-3xl font-semibold mb-8">Services Associés</h2>
      <div class="grid md:grid-cols-3 gap-6">
        {services.map(service => (
          <div class="bg-white rounded-lg shadow-sm p-6">
            <h3 class="text-xl font-semibold mb-3">{service.titre}</h3>
            <p class="text-gray-600 mb-4">{service.description}</p>
            <ul class="space-y-2 mb-6">
              {service.points.map(point => (
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-blue-600 mr-2 mt-1" aria-hidden="true" viewBox="0 0 24 24" fill="none">
                    <path d="M5 13l4 4L19 7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                  <span>{point}</span>
                </li>
              ))}
            </ul>
            <a href={service.url} class="text-blue-600 hover:text-blue-800 flex items-center">
              En savoir plus
              <svg class="w-4 h-4 ml-2" aria-hidden="true" viewBox="0 0 24 24" fill="none">
                <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </a>
          </div>
        ))}
      </div>
    </section>

    <!-- Calculateur -->
    <section class="mb-12 bg-gray-50 rounded-lg p-8">
      <h2 class="text-2xl font-semibold mb-4">Calculateur de Force G</h2>
      <p class="text-gray-600 mb-6">
        Optimisez vos protocoles en calculant précisément la force centrifuge relative (RCF)
      </p>
      <div class="flex justify-center">
        <a href="/guide/calcul-force-centrifuge/" class="btn-primary">
          Accéder au Calculateur
          <svg class="w-4 h-4 ml-2" aria-hidden="true" viewBox="0 0 24 24" fill="none">
            <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
      </div>
    </section>

    <!-- CTA Final -->
    <div class="bg-blue-50 rounded-lg p-8 text-center">
      <h2 class="text-2xl font-semibold mb-4">Besoin d'un Conseil Personnalisé ?</h2>
      <p class="text-lg text-gray-600 mb-6">
        Nos experts sont là pour vous guider vers la microcentrifugeuse idéale pour vos besoins
      </p>
      <a href="/devis-centrifugeuse/?type=micro&utm_source=micro_bottom" class="btn-primary inline-flex items-center">
        <svg class="w-5 h-5 mr-2" aria-hidden="true" viewBox="0 0 24 24" fill="none">
          <path d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        Contacter un Expert
      </a>
    </div>
  </div>
</Layout>

<style>
  .btn-primary {
    @apply inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200;
  }
  
  .btn-secondary {
    @apply inline-flex items-center px-6 py-3 border border-gray-300 text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200;
  }
</style>