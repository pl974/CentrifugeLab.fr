        inclus: [
          'Installation incluse',
          'Formation utilisateur',
          'Maintenance comprise',
          'Support technique'
        ],
        prix: 'À partir de 299€ HT/mois'
      },
      {
        nom: 'Location Longue Durée',
        duree: '> 12 mois',
        inclus: [
          'Installation incluse',
          'Formation complète',
          'Maintenance préventive',
          'Option d\'achat'
        ],
        prix: 'Sur devis'
      }
    ]
  }
];

const applications = [
  {
    secteur: 'Biologie Médicale',
    url: '/applications/centrifugeuse-biologie-medicale/',
    services: [
      'Formation protocoles cliniques',
      'Maintenance certifiée',
      'Location équipements'
    ]
  },
  {
    secteur: 'Recherche',
    url: '/applications/centrifugeuse-recherche-scientifique/',
    services: [
      'Formation spécialisée',
      'Support technique avancé',
      'Solutions flexibles'
    ]
  },
  {
    secteur: 'Industrie Pharma',
