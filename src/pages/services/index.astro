---
import Layout from '../../layouts/Layout.astro';

const services = [
  {
    titre: 'Formation Utilisateur',
    description: 'Programmes de formation certifiés pour une utilisation optimale',
    avantages: [
      'Formation théorique et pratique',
      'Certification officielle',
      'Support post-formation',
      'Programmes personnalisés'
    ],
    image: {
      icon: 'academic',
      color: 'blue'
    },
    url: '/formation-utilisation-centrifugeuse/'
  },
  {
    titre: 'Maintenance Préventive',
    description: 'Services de maintenance pour performance et longévité',
    avantages: [
      'Contrôles réguliers',
      'Pièces d\'origine',
