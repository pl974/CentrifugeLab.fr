---
import Layout from '../layouts/Layout.astro';

const personas = [
  {
    id: 'lab-manager',
    title: 'Responsable de Laboratoire',
    description: 'Solutions clé en main avec support premium et ROI optimisé',
    icon: 'manager'
  },
  {
    id: 'scientist',
    title: 'Chercheur Scientifique',
    description: 'Haute précision et protocoles validés pour vos recherches',
    icon: 'scientist'
  },
  {
    id: 'buyer',
    title: 'Acheteur Institutionnel',
    description: 'Solutions conformes aux normes avec budget maîtrisé',
    icon: 'buyer'
  }
];

const trustSignals = [
  { label: 'Laboratoires Équipés', value: '2000+', icon: 'lab' },
  { label: 'Années d\'Expertise', value: '25+', icon: 'calendar' },
  { label: 'Marques Certifiées', value: '15+', icon: 'certificate' },
  { label: 'Support Expert 24/7', value: '✓', icon: 'support' }
];

const features = [
  {
    title: 'Installation Incluse',
    description: 'Installation certifiée et mise en service par nos experts qualifiés',
    icon: 'installation'
  },
  {
    title: 'Formation Certifiée',
    description: 'Formation approfondie et certification de vos équipes',
    icon: 'formation'
  },
  {
    title: 'Support 24/7',
    description: 'Assistance technique experte disponible jour et nuit',
    icon: 'support'
  },
  {
    title: 'Garantie Premium',
    description: 'Extension de garantie et programme de maintenance préventive',
    icon: 'warranty'
  }
];

const expertiseAreas = [
  {
    title: 'Expertise Technique',
    description: 'Notre équipe d\'experts vous accompagne dans le choix et l\'optimisation de votre centrifugeuse',
    points: [
      'Audit de vos besoins',
      'Conseil personnalisé',
      'Solutions sur mesure',
      'Support technique'
    ]
  },
  {
    title: 'Qualité Certifiée',
    description: 'Nos équipements répondent aux normes les plus strictes du secteur',
    points: [
      'Certification ISO 9001',
      'Conformité GMP',
      'Traçabilité complète',
      'Documentation validée'
    ]
  },
  {
    title: 'Service Premium',
    description: 'Un accompagnement complet pour une utilisation optimale',
    points: [
      'Installation qualifiée',
      'Formation certifiante',
      'Maintenance préventive',
      'Support réactif'
    ]
  }
];
---

<Layout title="Centrifugeuse Laboratoire - Expert en Solutions de Centrifugation">
  <!-- Schema.org LocalBusiness pour SEO local -->
  <script type="application/ld+json" slot="head">
