        <a href="/securite/normes-centrifugeuse-laboratoire/" class="article-card">
          <h3>Normes & Sécurité</h3>
          <p>Conformité et bonnes pratiques</p>
        </a>
      </div>
    </section>

    <!-- Trust Signals -->
    <section class="py-12 bg-white rounded-xl shadow-sm">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 max-w-4xl mx-auto">
        {trustSignals.map((signal) => (
          <div class="text-center">
            <div class="mb-4">
              {signal.icon === 'lab' && (
                <svg class="w-12 h-12 text-blue-600 mx-auto" viewBox="0 0 24 24" fill="none">
                  <path d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8m-8 0l-1 1m1-1v17m8-17l1 1m-1-1v17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
