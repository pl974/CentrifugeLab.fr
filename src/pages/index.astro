      "@id": "https://centrifugelab.fr",
      "url": "https://centrifugelab.fr",
      "telephone": "+33123456789",
      "priceRange": "€€€",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "[Adresse à compléter]",
        "addressLocality": "Paris",
        "postalCode": "75001",
        "addressCountry": "FR"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": 48.856614,
        "longitude": 2.352222
      },
      "openingHoursSpecification": {
        "@type": "OpeningHoursSpecification",
        "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
        "opens": "09:00",
        "closes": "18:00"
      },
      "description": "Expert en solutions de centrifugation pour laboratoire. Large gamme de centrifugeuses de laboratoire adaptées à tous les besoins.",
      "potentialAction": {
        "@type": "SearchAction",
        "target": "https://centrifugelab.fr/search?q={search_term_string}",
        "query-input": "required name=search_term_string"
      },
      "aggregateRating": {
        "@type": "AggregateRating",
        "ratingValue": "4.8",
        "reviewCount": "127"
      },
      "contactPoint": {
        "@type": "ContactPoint",
        "telephone": "+33123456789",
        "contactType": "sales",
        "availableLanguage": "French",
        "areaServed": "FR"
      },
      "hasOfferCatalog": {
        "@type": "OfferCatalog",
        "name": "Centrifugeuses de Laboratoire",
        "itemListElement": [
          {
            "@type": "OfferCatalog",
            "name": "Centrifugeuses de Paillasse",
            "itemListElement": [
              {
                "@type": "Offer",
                "itemOffered": {
                  "@type": "Product",
                  "name": "Centrifugeuse de Paillasse"
                }
              }
            ]
          },
          {
            "@type": "OfferCatalog",
            "name": "Ultracentrifugeuses",
            "itemListElement": [
              {
                "@type": "Offer",
                "itemOffered": {
                  "@type": "Product",
                  "name": "Ultracentrifugeuse"
                }
              }
            ]
          },
          {
            "@type": "OfferCatalog",
            "name": "Microcentrifugeuses",
            "itemListElement": [
              {
                "@type": "Offer",
                "itemOffered": {
                  "@type": "Product",
                  "name": "Microcentrifugeuse"
                }
              }
            ]
          },
          {
            "@type": "OfferCatalog",
            "name": "Centrifugeuses Réfrigérées",
            "itemListElement": [
              {
                "@type": "Offer",
                "itemOffered": {
                  "@type": "Product",
                  "name": "Centrifugeuse Réfrigérée"
                }
              }
            ]
          }
        ]
      }
    }
  </script>

  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Hero Section -->
    <section class="relative py-12 sm:py-16 lg:py-20 text-center overflow-hidden">
      <!-- Background Pattern -->
      <div class="absolute inset-0 -z-10">
        <div class="absolute inset-0 bg-gradient-to-br from-blue-50 to-indigo-50 opacity-90"></div>
        <svg class="absolute inset-0 w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
          <defs>
            <pattern id="grid" width="8" height="8" patternUnits="userSpaceOnUse">
              <path d="M0 8L8 0M-1 1L1 -1M7 9L9 7" stroke="currentColor" stroke-width="0.5" stroke-opacity="0.1"/>
            </pattern>
          </defs>
          <rect width="100%" height="100%" fill="url(#grid)"/>
        </svg>
      </div>

      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 mb-6">
         <span class="text-blue-600">Centrifugeuse labo</span> CentrifugeLab un expert à votre service
      </h1>
      <p class="text-xl text-gray-700 mb-8 max-w-3xl mx-auto leading-relaxed">
        Découvrez notre gamme complète de centrifugeuses de laboratoire avec installation et support inclus.
        Plus de 2000 laboratoires nous font confiance pour leurs équipements de centrifugation.
      </p>

      <!-- Features Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 max-w-6xl mx-auto mb-12">
        {features.map(feature => (
          <div class="bg-white/80 backdrop-blur rounded-xl p-6 shadow-sm hover:shadow-md transition-shadow duration-200">
            <div class="mb-4">
              {feature.icon === 'installation' && (
                <svg class="w-12 h-12 text-blue-600 mx-auto" viewBox="0 0 24 24" fill="none">
                  <path d="M19 14l-7 7m0 0l-7-7m7 7V3" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              )}
              {feature.icon === 'formation' && (
                <svg class="w-12 h-12 text-blue-600 mx-auto" viewBox="0 0 24 24" fill="none">
                  <path d="M12 14l9-5-9-5-9 5 9 5z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M12 14l9-5-9-5-9 5 9 5z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M12 21l9-5-9-5-9 5 9 5z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              )}
              {feature.icon === 'support' && (
                <svg class="w-12 h-12 text-blue-600 mx-auto" viewBox="0 0 24 24" fill="none">
                  <path d="M3 18v-6a9 9 0 0118 0v6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M21 19a2 2 0 01-2 2h-1a2 2 0 01-2-2v-3a2 2 0 012-2h3zM3 19a2 2 0 002 2h1a2 2 0 002-2v-3a2 2 0 00-2-2H3z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              )}
              {feature.icon === 'warranty' && (
                <svg class="w-12 h-12 text-blue-600 mx-auto" viewBox="0 0 24 24" fill="none">
                  <path d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              )}
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">{feature.title}</h3>
            <p class="text-gray-600">{feature.description}</p>
          </div>
        ))}
      </div>

      <div class="flex justify-center gap-4">
        <a href="/devis-centrifugeuse/?utm_source=home_hero" class="btn-primary text-lg">
          Demander un Devis Personnalisé
          <span class="block text-sm opacity-90">Réponse sous 24h</span>
        </a>
        <a href="/guide-achat-centrifugeuse-laboratoire/?utm_source=home_hero" class="btn-secondary text-lg">
          Guide d'Achat Complet
          <span class="block text-sm opacity-90">Conseils d'experts</span>
        </a>
      </div>
    </section>

    <!-- Persona Selector -->
    <section class="py-12 bg-gradient-to-br from-gray-50 to-blue-50 rounded-xl mb-12">
      <h2 class="text-3xl font-semibold text-center mb-8">Sélectionnez votre Profil</h2>
      <p class="text-lg text-gray-600 text-center mb-8">
        Des solutions adaptées à chaque profil utilisateur
      </p>
      <div class="grid md:grid-cols-3 gap-6 max-w-5xl mx-auto px-4">
        {personas.map((persona, index) => (
          <a href={`/solutions/${persona.id}/?utm_source=home_persona&utm_content=${index}`} 
             class="persona-card group">
            <div class="mb-4">
              {persona.icon === 'manager' && (
                <svg class="w-16 h-16 text-blue-600 mx-auto group-hover:scale-110 transition-transform duration-200" viewBox="0 0 24 24" fill="none">
                  <path d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              )}
              {persona.icon === 'scientist' && (
                <svg class="w-16 h-16 text-purple-600 mx-auto group-hover:scale-110 transition-transform duration-200" viewBox="0 0 24 24" fill="none">
                  <path d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8m-8 0l-1 1m1-1v17m8-17l1 1m-1-1v17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              )}
              {persona.icon === 'buyer' && (
                <svg class="w-16 h-16 text-green-600 mx-auto group-hover:scale-110 transition-transform duration-200" viewBox="0 0 24 24" fill="none">
                  <path d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              )}
            </div>
            <h3 class="text-xl font-semibold mb-2">{persona.title}</h3>
            <p class="text-gray-600">{persona.description}</p>
            <div class="mt-4 text-blue-600 flex items-center">
              <span>Voir les solutions adaptées</span>
              <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" fill="none">
                <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </div>
          </a>
        ))}
      </div>
    </section>

    <!-- Expertise -->
    <section class="py-12 bg-white rounded-xl shadow-sm mb-12">
      <h2 class="text-3xl font-semibold text-center mb-8">Notre Expertise à Votre Service</h2>
      <div class="grid md:grid-cols-3 gap-8 px-4">
        {expertiseAreas.map(area => (
          <div class="space-y-4">
            <h3 class="text-xl font-semibold">{area.title}</h3>
            <p class="text-gray-600">{area.description}</p>
            <ul class="space-y-2">
              {area.points.map(point => (
                <li class="flex items-center">
                  <svg class="w-5 h-5 text-blue-600 mr-2" viewBox="0 0 24 24" fill="none">
                    <path d="M5 13l4 4L19 7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                  {point}
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </section>

    <!-- Featured Categories -->
    <section class="py-12 bg-white rounded-xl shadow-sm mb-12">
      <h2 class="text-3xl font-semibold text-center mb-8">Solutions de Centrifugation pour Laboratoire</h2>
      <p class="text-lg text-gray-600 text-center mb-8">
        Une gamme complète pour répondre à tous vos besoins
      </p>
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        <a href="/centrifugeuses/paillasse/" class="category-card">
          <div class="mb-4">
            <svg class="w-16 h-16 text-blue-600 mx-auto" viewBox="0 0 24 24" fill="none">
              <path d="M12 22C17.5228 22 22 17.5228 22 12C22 6.47715 17.5228 2 12 2C6.47715 2 2 6.47715 2 12C2 17.5228 6.47715 22 12 22Z" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              <path d="M12 16C14.2091 16 16 14.2091 16 12C16 9.79086 14.2091 8 12 8C9.79086 8 8 9.79086 8 12C8 14.2091 9.79086 16 12 16Z" stroke="currentColor" stroke-width="2"/>
              <path d="M12 7V5M12 19V17M5 12H7M17 12h2" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">Centrifugeuses de Paillasse</h3>
          <p class="text-gray-600 mb-4">La solution polyvalente idéale pour votre laboratoire</p>
          <ul class="mt-3 text-sm text-gray-500">
            <li>• Volume : 0.2-750mL</li>
            <li>• Jusqu'à 15,000 RPM</li>
            <li>• Applications multiples</li>
          </ul>
        </a>
        <a href="/centrifugeuses/micro/" class="category-card">
          <div class="mb-4">
            <svg class="w-16 h-16 text-purple-600 mx-auto" viewBox="0 0 24 24" fill="none">
              <path d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8m-8 0l-1 1m1-1v17m8-17l1 1m-1-1v17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          <h3>Microcentrifugeuses</h3>
          <p class="text-gray-600 mb-4">Précision maximale pour les petits volumes</p>
          <ul class="mt-3 text-sm text-gray-500">
            <li>• Volume : 0.2-2.0mL</li>
            <li>• Jusqu'à 21,000 RPM</li>
            <li>• Design compact</li>
          </ul>
        </a>
        <a href="/centrifugeuses/ultra/" class="category-card">
          <div class="mb-4">
            <svg class="w-16 h-16 text-green-600 mx-auto" viewBox="0 0 24 24" fill="none">
              <path d="M12 22C17.5228 22 22 17.5228 22 12C22 6.47715 17.5228 2 12 2C6.47715 2 2 6.47715 2 12C2 17.5228 6.47715 22 12 22Z" stroke="currentColor" stroke-width="2"/>
              <path d="M12 16C14.2091 16 16 14.2091 16 12C16 9.79086 14.2091 8 12 8C9.79086 8 8 9.79086 8 12C8 14.2091 9.79086 16 12 16Z" stroke="currentColor" stroke-width="2"/>
              <path d="M12 2V4M12 20v2M2 12h2m16 0h2" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              <path d="M4.93 4.93l1.41 1.41m11.32 11.32l1.41 1.41M4.93 19.07l1.41-1.41m11.32-11.32l1.41-1.41" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
          </div>
          <h3>Ultracentrifugeuses</h3>
          <p class="text-gray-600 mb-4">Performances extrêmes pour la recherche avancée</p>
          <ul class="mt-3 text-sm text-gray-500">
            <li>• Volume : 0.2-30mL</li>
            <li>• Jusqu'à 150,000 RPM</li>
            <li>• Force : 1,000,000 × g</li>
          </ul>
        </a>
        <a href="/centrifugeuses/refrigerees/" class="category-card">
          <div class="mb-4">
            <svg class="w-16 h-16 text-blue-600 mx-auto" viewBox="0 0 24 24" fill="none">
              <path d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              <path d="M12 16c2.2091 0 4-1.7909 4-4s-1.7909-4-4-4-4 1.7909-4 4 1.7909 4 4 4z" stroke="currentColor" stroke-width="2"/>
              <path d="M12 7V5m0 14v-2M7 12H5m14 0h-2" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
          </div>
          <h3>Centrifugeuses Réfrigérées</h3>
          <p class="text-gray-600 mb-4">Contrôle optimal de la température</p>
          <ul class="mt-3 text-sm text-gray-500">
            <li>• -20°C à +40°C</li>
            <li>• Jusqu'à 30,000 RPM</li>
            <li>• Protection échantillons</li>
          </ul>
        </a>
      </div>
      <div class="text-center mt-8">
        <a href="/centrifugeuses/" class="inline-flex items-center text-blue-600 hover:text-blue-800">
          Voir toutes nos solutions
          <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" fill="none">
            <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
      </div>
    </section>

    <!-- Latest Articles -->
    <section class="py-12 bg-gradient-to-br from-gray-50 to-blue-50 rounded-xl mb-12">
      <h2 class="text-3xl font-semibold text-center mb-8">Ressources Expertes</h2>
      <div class="grid md:grid-cols-3 gap-6">
        <a href="/guide/protocoles-centrifugation/" class="article-card">
          <h3>Guide des Protocoles</h3>
          <p>Optimisez vos procédures de centrifugation</p>
        </a>
        <a href="/maintenance/entretien-centrifugeuse-laboratoire/" class="article-card">
          <h3>Guide Maintenance</h3>
          <p>Prolongez la durée de vie de votre équipement</p>
