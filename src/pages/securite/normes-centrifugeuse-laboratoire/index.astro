---
import Layout from '../../../layouts/Layout.astro';

const normesSecurite = [
  {
    categorie: 'Normes Générales',
    standards: [
      {
        code: 'EN 61010-1',
        titre: 'Sécurité électrique',
        description: 'Exigences générales pour les équipements de laboratoire'
      },
      {
        code: 'EN 61010-2-020',
        titre: 'Centrifugeuses de laboratoire',
        description: 'Exigences particulières pour les centrifugeuses'
      },
      {
        code: 'ISO 9001',
        titre: 'Système qualité',
        description: 'Management de la qualité en laboratoire'
      }
    ]
  },
  {
    categorie: 'Sécurité Opérationnelle',
    standards: [
      {
        code: 'ISO 15189',
        titre: 'Laboratoires médicaux',
        description: 'Exigences concernant la qualité et la compétence'
      },
      {
        code: 'GLP',
        titre: 'Bonnes Pratiques de Laboratoire',
        description: 'Principes de qualité pour les essais non cliniques'
      }
    ]
  }
