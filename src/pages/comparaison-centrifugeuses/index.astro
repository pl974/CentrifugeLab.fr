---
import Layout from '../../layouts/Layout.astro';
import BreadcrumbSchema from '../../components/BreadcrumbSchema.astro';
import ComparisonTable from '../../components/ComparisonTable.astro';

const metaDescription = "Comparatif centrifugeuses laboratoire 2025. Tableaux comparatifs détaillés : vitesse, volume, prix, applications. Trouvez le modèle idéal pour vos besoins.";

// Comparaison par catégorie
const comparisonData = {
  features: [
    "Vitesse maximale",
    "Force RCF max",
    "Volume échantillons",
    "Contrôle température",
    "Programmes",
    "Niveau sonore",
    "Dimensions (L×P×H)",
    "Installation incluse",
    "Formation incluse",
    "Garantie"
  ],
  items: [
    {
      name: "Microcentrifugeuse",
      badge: "Compact",
      specs: {
        "Vitesse maximale": "21,000 RPM",
        "Force RCF max": "30,130 × g",
        "Volume échantillons": "0.2 - 2.0 mL",
        "Contrôle température": false,
        "Programmes": "2-10",
        "Niveau sonore": "< 55 dB",
        "Dimensions (L×P×H)": "20×23×13 cm",
        "Installation incluse": true,
        "Formation incluse": true,
        "Garantie": "2 ans"
      },
      price: "À partir de 990€ HT",
      cta: {
        text: "En savoir plus",
        url: "/centrifugeuses/micro/"
      }
    },
    {
      name: "Paillasse Standard",
      badge: "Populaire",
      specs: {
        "Vitesse maximale": "15,000 RPM",
        "Force RCF max": "21,380 × g",
        "Volume échantillons": "0.2 - 750 mL",
        "Contrôle température": false,
        "Programmes": "10-99",
        "Niveau sonore": "< 60 dB",
        "Dimensions (L×P×H)": "45×55×35 cm",
        "Installation incluse": true,
        "Formation incluse": true,
        "Garantie": "3 ans"
      },
      price: "À partir de 2,990€ HT",
      cta: {
        text: "En savoir plus",
        url: "/centrifugeuses/paillasse/"
      }
    },
    {
      name: "Réfrigérée",
      badge: "Recommandé",
      specs: {
        "Vitesse maximale": "30,000 RPM",
        "Force RCF max": "65,000 × g",
        "Volume échantillons": "0.2 - 500 mL",
        "Contrôle température": "-20°C à +40°C",
        "Programmes": "99 programmes",
        "Niveau sonore": "< 62 dB",
        "Dimensions (L×P×H)": "60×65×45 cm",
        "Installation incluse": true,
        "Formation incluse": true,
        "Garantie": "3 ans"
      },
      price: "À partir de 8,990€ HT",
      cta: {
        text: "En savoir plus",
        url: "/centrifugeuses/refrigerees/"
      }
    },
    {
      name: "Ultracentrifugeuse",
      badge: "Haute Performance",
      specs: {
        "Vitesse maximale": "150,000 RPM",
        "Force RCF max": "1,000,000 × g",
        "Volume échantillons": "0.2 - 30 mL",
        "Contrôle température": "-10°C à +40°C",
        "Programmes": "199 programmes",
        "Niveau sonore": "< 65 dB",
        "Dimensions (L×P×H)": "80×80×60 cm",
        "Installation incluse": true,
        "Formation incluse": true,
        "Garantie": "5 ans"
      },
      price: "À partir de 49,990€ HT",
      cta: {
        text: "En savoir plus",
        url: "/centrifugeuses/ultra/"
      }
    }
  ]
};

// Comparaison par application
const applicationComparison = [
  {
    application: "Biologie Moléculaire",
    recommended: "Microcentrifugeuse + Réfrigérée",
    why: "Petits volumes PCR + contrôle température pour ADN/ARN",
    url: "/applications/centrifugeuse-recherche-scientifique/"
  },
  {
    application: "Biologie Médicale",
    recommended: "Paillasse Standard",
    why: "Haut débit pour analyses sanguines quotidiennes",
    url: "/applications/centrifugeuse-biologie-medicale/"
  },
  {
    application: "Recherche Protéines",
    recommended: "Ultracentrifugeuse",
    why: "Force extrême nécessaire pour séparation moléculaire",
    url: "/applications/centrifugeuse-recherche-scientifique/"
  },
  {
    application: "Culture Cellulaire",
    recommended: "Réfrigérée",
    why: "Protection thermique essentielle pour cellules vivantes",
    url: "/applications/centrifugeuse-recherche-scientifique/"
  },
  {
    application: "Industrie Pharma",
    recommended: "Paillasse Pro + Réfrigérée",
    why: "Robustesse + conformité GMP + traçabilité",
    url: "/applications/centrifugeuse-industrie-pharmaceutique/"
  }
];
---

<Layout
  title="Comparatif Centrifugeuses Laboratoire - Quel Modèle Choisir ?"
  description={metaDescription}>

  <!-- Fil d'Ariane -->
  <BreadcrumbSchema items={[
    { name: 'Accueil', url: '/' },
    { name: 'Comparaison Centrifugeuses', url: '/comparaison-centrifugeuses/' }
  ]} />

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Hero -->
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">
        Comparatif Centrifugeuses de Laboratoire
      </h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Comparez les spécifications techniques, les prix et les applications de nos différents modèles
        pour trouver la centrifugeuse idéale pour votre laboratoire.
      </p>
    </div>

    <!-- Comparaison Technique -->
    <ComparisonTable
      title="Comparaison Technique des Modèles"
      subtitle="Tableau comparatif détaillé des caractéristiques et performances"
      items={comparisonData.items}
      features={comparisonData.features}
    />

    <!-- Comparaison par Application -->
    <section class="mt-16 bg-gray-50 rounded-xl p-8">
      <h2 class="text-3xl font-bold text-center text-gray-900 mb-8">
        Quelle Centrifugeuse pour Quelle Application ?
      </h2>

      <div class="grid md:grid-cols-2 gap-6 max-w-5xl mx-auto">
        {applicationComparison.map(app => (
          <div class="bg-white rounded-lg p-6 shadow-sm">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">
              {app.application}
            </h3>
            <div class="mb-3">
              <span class="inline-block px-3 py-1 bg-blue-100 text-blue-800 text-sm font-medium rounded">
                Recommandé : {app.recommended}
              </span>
            </div>
            <p class="text-gray-700 mb-4">
              {app.why}
            </p>
            <a
              href={app.url}
              class="text-blue-600 hover:text-blue-800 font-medium inline-flex items-center"
            >
              En savoir plus
              <svg class="w-4 h-4 ml-1" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </a>
          </div>
        ))}
      </div>
    </section>

    <!-- Guide d'aide au choix -->
    <section class="mt-16">
      <div class="bg-gradient-to-br from-blue-50 to-indigo-50 rounded-xl p-8">
        <h2 class="text-2xl font-bold text-center text-gray-900 mb-6">
          Besoin d'Aide pour Choisir ?
        </h2>
        <p class="text-center text-gray-700 mb-8 max-w-2xl mx-auto">
          Notre guide d'achat détaillé vous accompagne pas à pas dans le choix de votre centrifugeuse,
          avec des conseils d'experts et des critères de sélection clairs.
        </p>
        <div class="flex justify-center gap-4">
          <a
            href="/guide-achat-centrifugeuse-laboratoire/"
            class="inline-flex items-center px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors"
          >
            <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24" fill="none" aria-hidden="true">
              <path d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            Consulter le Guide d'Achat
          </a>
          <a
            href="/contact/"
            class="inline-flex items-center px-6 py-3 bg-white text-blue-600 font-medium rounded-lg hover:bg-gray-50 transition-colors border border-blue-200"
          >
            <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24" fill="none" aria-hidden="true">
              <path d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            Parler à un Expert
          </a>
        </div>
      </div>
    </section>

    <!-- Liens vers catégories -->
    <section class="mt-16">
      <h2 class="text-2xl font-bold text-center text-gray-900 mb-8">
        Explorer par Catégorie
      </h2>
      <div class="grid md:grid-cols-4 gap-6">
        <a href="/centrifugeuses/micro/" class="group bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition-all">
          <svg class="w-12 h-12 text-purple-600 mb-4 mx-auto" viewBox="0 0 24 24" fill="none" aria-hidden="true">
            <path d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8m-8 0l-1 1m1-1v17m8-17l1 1m-1-1v17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          <h3 class="text-lg font-semibold text-center mb-2 group-hover:text-blue-600">Microcentrifugeuses</h3>
          <p class="text-sm text-gray-600 text-center">Compactes et précises</p>
        </a>
        <a href="/centrifugeuses/paillasse/" class="group bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition-all">
          <svg class="w-12 h-12 text-blue-600 mb-4 mx-auto" viewBox="0 0 24 24" fill="none" aria-hidden="true">
            <path d="M12 22C17.5228 22 22 17.5228 22 12C22 6.47715 17.5228 2 12 2C6.47715 2 2 6.47715 2 12C2 17.5228 6.47715 22 12 22Z" stroke="currentColor" stroke-width="2"/>
          </svg>
          <h3 class="text-lg font-semibold text-center mb-2 group-hover:text-blue-600">Paillasse</h3>
          <p class="text-sm text-gray-600 text-center">Polyvalentes et robustes</p>
        </a>
        <a href="/centrifugeuses/refrigerees/" class="group bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition-all">
          <svg class="w-12 h-12 text-blue-600 mb-4 mx-auto" viewBox="0 0 24 24" fill="none" aria-hidden="true">
            <path d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
          </svg>
          <h3 class="text-lg font-semibold text-center mb-2 group-hover:text-blue-600">Réfrigérées</h3>
          <p class="text-sm text-gray-600 text-center">Protection thermique</p>
        </a>
        <a href="/centrifugeuses/ultra/" class="group bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition-all">
          <svg class="w-12 h-12 text-green-600 mb-4 mx-auto" viewBox="0 0 24 24" fill="none" aria-hidden="true">
            <path d="M12 22C17.5228 22 22 17.5228 22 12C22 6.47715 17.5228 2 12 2C6.47715 2 2 6.47715 2 12C2 17.5228 6.47715 22 12 22Z" stroke="currentColor" stroke-width="2"/>
          </svg>
          <h3 class="text-lg font-semibold text-center mb-2 group-hover:text-blue-600">Ultracentrifugeuses</h3>
          <p class="text-sm text-gray-600 text-center">Performance extrême</p>
        </a>
      </div>
    </section>
  </div>
</Layout>
