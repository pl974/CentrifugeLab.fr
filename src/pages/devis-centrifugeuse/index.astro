---
import Layout from '../../layouts/Layout.astro';

const applications = [
  'Biologie Médicale',
  'Recherche Scientifique',
  'Industrie Pharmaceutique',
  'Chimie Analytique',
  'Environnement'
];

const types = [
  { value: 'paillasse', label: 'Centrifugeuse de Paillasse' },
  { value: 'micro', label: 'Microcentrifugeuse' },
  { value: 'ultra', label: 'Ultracentrifugeuse' },
  { value: 'refrigeree', label: 'Centrifugeuse Réfrigérée' }
];

const relatedResources = [
  {
    title: 'Guide d\'Achat',
    url: '/guide-achat-centrifugeuse-laboratoire/',
    description: 'Comprendre les critères de choix essentiels'
  },
  {
    title: 'Comparatif Détaillé',
    url: '/comparatifs/meilleures-centrifugeuses-2024/',
    description: 'Analyse comparative des meilleures solutions'
  },
  {
    title: 'Protocoles',
    url: '/guide/protocoles-centrifugation/',
    description: 'Optimisez vos procédures'
  }
];
---

<Layout title="Devis Personnalisé Centrifugeuse - Expert en Solutions de Laboratoire">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid lg:grid-cols-2 gap-12">
      <!-- Form Section -->
      <div>
        <h1 class="text-4xl font-bold text-gray-900 mb-6">
          Devis Personnalisé Centrifugeuse
        </h1>
        <p class="text-lg text-gray-600 mb-8">
          Recevez une proposition adaptée à vos besoins spécifiques en quelques minutes.
        </p>

        <form 
          class="space-y-6" 
          name="devis" 
          method="POST" 
          netlify-honeypot="bot-field"
          data-netlify="true"
        >
          <p class="hidden">
            <label>
              Don't fill this out if you're human: <input name="bot-field" />
            </label>
          </p>
          <input type="hidden" name="form-name" value="devis" />

          <!-- Type de Centrifugeuse -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Type de Centrifugeuse*
            </label>
            <select name="type" required class="form-select">
              <option value="">Sélectionnez un type</option>
              {types.map(type => (
                <option value={type.value}>{type.label}</option>
              ))}
            </select>
          </div>

          <!-- Application -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Application Principale*
            </label>
            <select name="application" required class="form-select">
              <option value="">Sélectionnez une application</option>
              {applications.map(app => (
                <option value={app}>{app}</option>
              ))}
            </select>
          </div>

          <!-- Volume -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Volume Maximum (mL)*
            </label>
            <input type="number" name="volume" required class="form-input" placeholder="Ex: 50" />
          </div>

          <!-- Vitesse -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Vitesse Maximale Requise (RPM)
            </label>
            <input type="number" name="speed" class="form-input" placeholder="Ex: 15000" />
          </div>

          <!-- Coordonnées -->
          <div class="space-y-4">
            <h3 class="text-lg font-medium text-gray-900">Vos Coordonnées</h3>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                Nom Complet*
              </label>
              <input type="text" name="name" required class="form-input" />
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                Email Professionnel*
              </label>
              <input type="email" name="email" required class="form-input" />
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                Téléphone
              </label>
              <input type="tel" name="phone" class="form-input" />
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                Organisation
              </label>
              <input type="text" name="organization" class="form-input" />
            </div>
          </div>

          <button type="submit" class="btn-primary w-full">
            Recevoir Mon Devis Personnalisé
          </button>
        </form>
      </div>

      <!-- Related Content -->
      <div class="space-y-8">
        <div class="bg-blue-50 rounded-lg p-6">
          <h2 class="text-xl font-semibold text-blue-900 mb-4">
            Pourquoi Nous Choisir?
          </h2>
          <ul class="space-y-4">
            <li class="flex items-start">
              <span class="text-blue-500 mr-2">✓</span>
              <span>Expertise technique approfondie</span>
            </li>
            <li class="flex items-start">
              <span class="text-blue-500 mr-2">✓</span>
              <span>Support technique 24/7</span>
            </li>
            <li class="flex items-start">
              <span class="text-blue-500 mr-2">✓</span>
              <span>Installation et formation incluses</span>
            </li>
            <li class="flex items-start">
              <span class="text-blue-500 mr-2">✓</span>
              <span>Garantie étendue</span>
            </li>
          </ul>
        </div>

        <div class="bg-gray-50 rounded-lg p-6">
          <h2 class="text-xl font-semibold mb-4">Ressources Utiles</h2>
          <div class="space-y-4">
            {relatedResources.map(resource => (
              <a href={resource.url} class="block p-4 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow duration-200">
                <h3 class="font-medium text-blue-600">{resource.title}</h3>
                <p class="text-sm text-gray-600">{resource.description}</p>
              </a>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  .form-input,
  .form-select {
    @apply mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500;
  }

  .btn-primary {
    @apply inline-flex justify-center items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500;
  }
</style>