  {
    title: 'Formation Initiale',
    duration: '1 journée',
    audience: 'Nouveaux utilisateurs',
    modules: [
      'Principes de centrifugation',
      'Sécurité et bonnes pratiques',
      'Utilisation des différents rotors',
      'Maintenance de premier niveau'
    ],
    price: 'À partir de 490€ HT/personne'
  },
  {
    title: 'Formation Avancée',
    duration: '2 jours',
    audience: 'Utilisateurs expérimentés',
    modules: [
      'Optimisation des protocoles',
