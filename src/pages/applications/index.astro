---
import Layout from '../../layouts/Layout.astro';

const applications = [
  {
    titre: 'Biologie Médicale',
    description: 'Solutions pour laboratoires d\'analyses et centres médicaux',
    usages: [
      'Analyses sanguines',
      'Analyses urinaires',
      'Microbiologie',
      'Tests cliniques'
    ],
    image: {
      icon: 'microscope',
      color: 'blue'
    },
    url: '/applications/centrifugeuse-biologie-medicale/'
  },
  {
    titre: 'Recherche Scientifique',
    description: 'Équipements haute performance pour la recherche',
    usages: [
      'Biologie moléculaire',
      'Culture cellulaire',
      'Études biochimiques',
      'Ultracentrifugation'
    ],
    image: {
      icon: 'flask',
      color: 'purple'
    },
    url: '/applications/centrifugeuse-recherche-scientifique/'
  },
  {
    titre: 'Industrie Pharmaceutique',
    description: 'Solutions conformes GMP pour la production',
    usages: [
      'Production de vaccins',
      'Développement médicaments',
      'Contrôle qualité',
      'Validation process'
    ],
    image: {
      icon: 'pill',
      color: 'green'
    },
    url: '/applications/centrifugeuse-industrie-pharmaceutique/'
  },
  {
    titre: 'Chimie Analytique',
    description: 'Précision et performance pour analyses chimiques',
    usages: [
      'Chromatographie préparative',
      'Analyse environnementale',
      'Chimie des polymères',
      'Séparation de phases'
    ],
    image: {
      icon: 'beaker',
      color: 'red'
    },
    url: '/applications/centrifugeuse-chimie-analytique/'
  },
  {
    titre: 'Environnement',
    description: 'Solutions pour analyses environnementales',
    usages: [
      'Analyse des sols',
      'Traitement des eaux',
      'Analyse atmosphérique',
      'Études pollution'
    ],
    image: {
      icon: 'leaf',
      color: 'emerald'
    },
    url: '/applications/centrifugeuse-environnement/'
  }
];

const equipementsAssocies = [
  {
    type: 'Centrifugeuses de Paillasse',
    description: 'Solutions polyvalentes pour applications courantes',
    specs: {
      volume: '0.2-750 mL',
      vitesse: 'jusqu\'à 15,000 RPM'
    },
    url: '/centrifugeuses/paillasse/'
  },
  {
    type: 'Ultracentrifugeuses',
    description: 'Performance maximale pour applications exigeantes',
    specs: {
      volume: '0.2-30 mL',
      vitesse: 'jusqu\'à 150,000 RPM'
    },
    url: '/centrifugeuses/ultra/'
  },
  {
    type: 'Centrifugeuses Réfrigérées',
    description: 'Contrôle température pour échantillons sensibles',
    specs: {
      volume: '0.2-500 mL',
      temperature: '-20°C à +40°C'
    },
    url: '/centrifugeuses/refrigerees/'
  }
];

const servicesComplementaires = [
  {
    titre: 'Formation Utilisateur',
    description: 'Programmes adaptés à chaque application',
    points: [
      'Formation théorique',
      'Travaux pratiques',
      'Certification',
      'Support continu'
    ],
    url: '/formation-utilisation-centrifugeuse/'
  },
  {
    titre: 'Maintenance Préventive',
    description: 'Services de maintenance spécialisés',
    points: [
      'Contrôles réguliers',
      'Calibration',
      'Pièces d\'origine',
      'Traçabilité'
    ],
    url: '/maintenance/entretien-centrifugeuse-laboratoire/'
  },
  {
    titre: 'Location Flexible',
    description: 'Solutions temporaires adaptées',
    points: [
      'Courte durée',
      'Installation incluse',
      'Support technique',
      'Maintenance comprise'
    ],
    url: '/location-centrifugeuse-laboratoire/'
  }
];
---

<Layout title="Applications Centrifugeuse Laboratoire - Solutions par Secteur">
  <!-- Schema.org pour Rich Snippets -->
  <script type="application/ld+json" slot="head">
    {
      "@context": "https://schema.org",
      "@type": "CollectionPage",
      "name": "Applications des Centrifugeuses de Laboratoire",
      "description": "Guide complet des applications et solutions de centrifugation par secteur. Trouvez l'équipement adapté à vos besoins spécifiques.",
      "about": {
        "@type": "Thing",
        "name": "Applications Centrifugation"
      }
    }
  </script>

  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Hero Section -->
    <div class="mb-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">
        Applications Centrifugeuse Labo : Solutions par Secteur
      </h1>
      <p class="text-xl text-gray-600 mb-8">
        Découvrez nos solutions de centrifugation spécialisées pour chaque domaine d'application.
        Expertise technique et support personnalisé pour optimiser vos processus.
      </p>
      <div class="flex gap-4">
        <a href="/devis-centrifugeuse/?utm_source=applications" class="btn-primary">
          <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24" fill="none">
            <path d="M9 12H15M12 9V15M12 3C16.9706 3 21 7.02944 21 12C21 16.9706 16.9706 21 12 21C7.02944 21 3 16.9706 3 12C3 7.02944 7.02944 3 12 3Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          Devis Personnalisé
          <span class="block text-sm opacity-90">Réponse sous 24h</span>
        </a>
        <a href="/guide-achat-centrifugeuse-laboratoire/?utm_source=applications" class="btn-secondary">
          Guide d'Achat
          <span class="block text-sm opacity-90">Conseils experts</span>
        </a>
      </div>
    </div>

    <!-- Applications -->
    <section class="mb-12">
      <h2 class="text-3xl font-semibold mb-8">Applications Spécialisées</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {applications.map(app => (
          <a href={app.url} class="bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition-shadow duration-200">
            <div class={`w-12 h-12 rounded-lg bg-${app.image.color}-100 flex items-center justify-center mb-4`}>
              <svg class={`w-6 h-6 text-${app.image.color}-600`} viewBox="0 0 24 24" fill="none">
                {app.image.icon === 'microscope' && (
                  <path d="M12 22C17.5228 22 22 17.5228 22 12C22 6.47715 17.5228 2 12 2C6.47715 2 2 6.47715 2 12C2 17.5228 6.47715 22 12 22Z" stroke="currentColor" stroke-width="2"/>
                )}
                {app.image.icon === 'flask' && (
                  <path d="M9 3v15m0 0l3 3m-3-3l-3 3M5 3h14" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                )}
                {app.image.icon === 'pill' && (
                  <path d="M10.5 20H4a2 2 0 01-2-2V6a2 2 0 012-2h16a2 2 0 012 2v7.5M8 10h8m-8 4h4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                )}
                {app.image.icon === 'beaker' && (
                  <path d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8m-8 0l-1 1m1-1v17m8-17l1 1m-1-1v17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                )}
                {app.image.icon === 'leaf' && (
                  <path d="M12 8c-2.5 0-4 1.5-4 4s1.5 4 4 4 4-1.5 4-4-1.5-4-4-4zm0 0c2.5-2.5 4-4 4-4s1.5 1.5 1.5 4-1.5 4-1.5 4m-4-4c-2.5-2.5-4-4-4-4S6 5.5 6 8s1.5 4 1.5 4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                )}
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-2">{app.titre}</h3>
            <p class="text-gray-600 mb-4">{app.description}</p>
            <ul class="space-y-2">
              {app.usages.map(usage => (
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-blue-600 mr-2 mt-1" viewBox="0 0 24 24" fill="none">
                    <path d="M5 13l4 4L19 7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                  <span>{usage}</span>
                </li>
              ))}
            </ul>
          </a>
        ))}
      </div>
    </section>

    <!-- Équipements Associés -->
    <section class="mb-12">
      <h2 class="text-3xl font-semibold mb-8">Équipements par Application</h2>
      <div class="grid md:grid-cols-3 gap-6">
        {equipementsAssocies.map(equip => (
          <div class="bg-white rounded-lg shadow-sm p-6">
            <h3 class="text-xl font-semibold mb-3">{equip.type}</h3>
            <p class="text-gray-600 mb-4">{equip.description}</p>
            <div class="mb-6">
              <h4 class="font-medium mb-2">Spécifications :</h4>
              <ul class="space-y-2">
                {Object.entries(equip.specs).map(([key, value]) => (
                  <li class="flex items-start">
                    <svg class="w-5 h-5 text-blue-600 mr-2 mt-1" viewBox="0 0 24 24" fill="none">
                      <path d="M5 13l4 4L19 7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    <span>{key}: {value}</span>
                  </li>
                ))}
              </ul>
            </div>
            <a href={equip.url} class="btn-primary w-full justify-center">
              Découvrir
            </a>
          </div>
        ))}
      </div>
    </section>

    <!-- Services Complémentaires -->
    <section class="mb-12">
      <h2 class="text-3xl font-semibold mb-8">Services Associés</h2>
      <div class="grid md:grid-cols-3 gap-6">
        {servicesComplementaires.map(service => (
          <div class="bg-white rounded-lg shadow-sm p-6">
            <h3 class="text-xl font-semibold mb-3">{service.titre}</h3>
            <p class="text-gray-600 mb-4">{service.description}</p>
            <ul class="space-y-2 mb-6">
              {service.points.map(point => (
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-blue-600 mr-2 mt-1" viewBox="0 0 24 24" fill="none">
                    <path d="M5 13l4 4L19 7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                  <span>{point}</span>
                </li>
              ))}
            </ul>
            <a href={service.url} class="text-blue-600 hover:text-blue-800 flex items-center">
              En savoir plus
              <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" fill="none">
                <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </a>
          </div>
        ))}
      </div>
    </section>

    <!-- CTA Final -->
    <div class="bg-blue-50 rounded-lg p-8 text-center">
      <h2 class="text-2xl font-semibold mb-4">Besoin d'un Conseil Personnalisé ?</h2>
      <p class="text-lg text-gray-600 mb-6">
        Nos experts sont là pour vous guider vers la solution idéale pour votre application
      </p>
      <a href="/devis-centrifugeuse/?utm_source=applications_bottom" class="btn-primary inline-flex items-center">
        <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24" fill="none">
          <path d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        Contacter un Expert
      </a>
    </div>
  </main>
</Layout>

<style>
  .btn-primary {
    @apply inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200;
  }
  
  .btn-secondary {
    @apply inline-flex items-center px-6 py-3 border border-gray-300 text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200;
  }
</style>